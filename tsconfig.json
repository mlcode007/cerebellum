{
    "compilerOptions": {
      "module": "ES2015",
      "target": "ES2015",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "example/**/*"],
    "exclude": ["**/*.spec.ts"]
  }